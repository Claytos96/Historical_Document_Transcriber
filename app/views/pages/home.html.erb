<header>
  <h1>TranscribeHistory</h1>
  <div class="nav">
    <li><button class="home"><%= link_to "About", about_path %></button></li>
    <li><button class="home"><%= link_to "Add a Document", new_document_path %></button></li>
    <% if user_signed_in? %>
      <li><button class="home"><%= link_to "Your Documents", your_documents_path %></button></li>
    <% end %>
    <li><% if user_signed_in? %>
      <button class="home"><%= link_to "Log out", destroy_user_session_path, data: {turbo_method: :delete} %></button>
    <% else %>
      <button class="home"><%= link_to "Login", new_user_session_path %></button>
    <% end %></li>
  </div>
</header>
<div class="main d-flex justify-content-center">
  <div class="col-7 search-container">
    <%= form_with url: documents_path, method: :get, class: "d-flex search" do %>
      <%= text_field_tag :query,
          params[:query],
          class: "form-control search-bar",
          placeholder: "Search Documents"
      %>
      <%= submit_tag "Search", name: "", class: "button" %>
      <% end %>
  </div>
</div>
