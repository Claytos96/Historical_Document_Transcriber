<div class="doc">
  <div class="pic">
    <% if document.file.attached? %>
      <%= cl_image_tag document.file.key, crop: :fill %>
    <% end %>
  </div>
  <div class="info">
    <div class="title">
      <h2><%= document.title %></h2>
    </div>
    <p><%= document.description %></p>
  </div>
</div>
