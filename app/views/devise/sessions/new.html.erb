<div class="login">
  <h2 class="text-center">Log in</h2>
  <div class="form">
    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="field">
        <%= f.label :email, class: "form-label" %><br />
        <%= f.email_field :email, autofocus: true, class: "form-control", autocomplete: "email" %>
      </div>

      <div class="field">
        <%= f.label :password, class: "form-label" %><br />
        <%= f.password_field :password, class: "form-control", autocomplete: "current-password" %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="remember">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
      <% end %>

      <div class="actions text-center mt-3 mb-2">
        <%= f.button :submit, "Login", class: 'btn-secondary' %>
      </div>
    <% end %>
  </div>
  <div class="links text-center">
    <%= render "devise/shared/links" %>
  </div>
</div>
